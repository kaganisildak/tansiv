<platform>
    <type value="dumbbell" /> <!-- Type of topology -->
    <bandwidth value="1000Mbps" />
    <left_latency value="2ms" /> <!-- Latency between a left node and the
    left router -->
    <right_latency value="1ms" /> <!-- Latency between a right node and the
    right router -->
