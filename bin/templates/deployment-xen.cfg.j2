# Use Hardware Virtualization Mode
type = "hvm"

# Path to iso and cd-rom
disk = [
        'tap:qcow2:{{ xen_img }},xvda,w',
        'format=raw, vdev=xvdc, access=r, devtype=cdrom, target={{ xen_cdrom }}'
       ]

# Network configuration
vif = [
       'bridge={{ xen_tantap_bridge }},mac={{ xen_tantap_mac }},type=ioemu,model=e1000,trusted',
       'bridge={{ xen_mantap_bridge }},mac={{ xen_mantap_mac }},type=ioemu,model=e1000,trusted'

      ]

# DomU settings
memory = {{ xen_mem }}
name = "tansiv-{{ descriptor }}"
vcpus = "{{ xen_vcpus }}"
cpus = "{{ xen_cpuset }}"
# Do not emulate the TSC
tsc_mode = "native"
on_poweroff = "destroy"
boot = "cd"
timer_mode = "no_delay_for_missed_ticks"
xen_platform_pci = 1
